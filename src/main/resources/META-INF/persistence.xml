<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="SuidRWPU">
		<description>JPA Read-Write Persistence Unit.</description>
		<jta-data-source>jdbc/SuidRWDS</jta-data-source>
		<properties>
			<!-- When running on servers using EclipseLink as the JPA provider
			     (e.g. in GlassFish), supply these properties so EclipseLink shuts
			     up and stops logging stack traces for things such as constraint 
			     violations and other DB exceptions that just happen in normal use 
			     and should never IMHO cause a stack trace in the logs. -->
			<property name="eclipselink.logging.exceptions" value="false"/>
			<property name="eclipselink.logging.level" value="SEVERE"/>			
		</properties>
	</persistence-unit>
</persistence>
